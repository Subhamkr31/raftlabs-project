{
  "info": {
    "name": "Task Management GraphQL API",
    "description": "Collection of GraphQL APIs for user management system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "User Management",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation($username: String!, $password: String!) { register(username: $username, password: $password) { user { _id username } } }\",\"variables\":{\"username\":\"newuser\",\"password\":\"password123\"}}"
            },
            "description": "Register a new user with username and password"
          },
          "response": [
            {
              "name": "Successful Registration",
              "originalRequest": {
                "method": "POST",
                "body": {
                  "mode": "raw",
                  "raw": "{\"username\":\"newuser\",\"password\":\"password123\"}"
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "body": {
                "data": {
                  "register": {
                    "user": {
                      "_id": "user_id",
                      "username": "newuser"
                    }
                  }
                }
              }
            }
          ]
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation($username: String!, $password: String!) { login(username: $username, password: $password) { token user { _id username } } }\",\"variables\":{\"username\":\"newuser\",\"password\":\"password123\"}}"
            },
            "description": "Login with username and password to get JWT token"
          },
          "response": [
            {
              "name": "Successful Login",
              "originalRequest": {
                "method": "POST",
                "body": {
                  "mode": "raw",
                  "raw": "{\"username\":\"newuser\",\"password\":\"password123\"}"
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "body": {
                "data": {
                  "login": {
                    "token": "jwt_token_here",
                    "user": {
                      "_id": "user_id",
                      "username": "newuser"
                    }
                  }
                }
              }
            }
          ]
        },
        {
          "name": "Get Users",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "host": ["{{baseUrl}}"],
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"query { getUsers { _id username } }\"}"
            },
            "description": "Get list of all users (requires authentication)"
          },
          "response": [
            {
              "name": "Successful Users Retrieval",
              "originalRequest": {
                "method": "POST",
                "body": {
                  "mode": "raw",
                  "raw": "{\"query\":\"query { getUsers { _id username } }\"}"
                }
              },
              "status": "OK",
              "code": 200,
              "_postman_previewlanguage": "json",
              "body": {
                "data": {
                  "getUsers": [
                    {
                      "_id": "user_id_1",
                      "username": "user1"
                    },
                    {
                      "_id": "user_id_2",
                      "username": "user2"
                    }
                  ]
                }
              }
            }
          ]
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "your_jwt_token_here",
      "type": "string"
    }
  ]
} 