{
  "info": {
    "name": "Real-Time Chat API",
    "description": "GraphQL API collection for Real-Time Chat Application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation($username: String!, $password: String!) { login(username: $username, password: $password) }\",\"variables\":{\"username\":\"testuser\",\"password\":\"testpassword\"}}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Authenticate user and get JWT token"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Room Operations",
      "item": [
        {
          "name": "Join Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation JoinRoom($roomId: ID!) { joinRoom(roomId: $roomId) { id name participants { id username } } }\",\"variables\":{\"roomId\":\"1\"}}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Join a chat room"
          },
          "response": []
        },
        {
          "name": "Leave Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation LeaveRoom($roomId: ID!) { leaveRoom(roomId: $roomId) }\",\"variables\":{\"roomId\":\"1\"}}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Leave a chat room"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Messages",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/graphql",
              "path": ["graphql"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\"query\":\"mutation SendMessage($roomId: ID!, $content: String!) { sendMessage(roomId: $roomId, content: $content) { id content sender { id username } roomId } }\",\"variables\":{\"roomId\":\"1\",\"content\":\"Hello, everyone!\"}}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "description": "Send a message in a room"
          },
          "response": []
        }
      ]
    }
  ],
  "event": [],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ]
} 